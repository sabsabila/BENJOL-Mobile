<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="user"
            type="com.alifadepe.android_example.model.Profile" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profileLabel"
            android:textSize="10pt"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/layout_drawable"
                android:padding="32dp"
                android:layout_marginTop="60dp">

                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:layout_gravity="center_horizontal"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="20dp"
                        android:id="@+id/profile">

                        <LinearLayout
                            android:id="@+id/profile_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingLeft="25dp"
                            android:paddingRight="25dp">

                            <TextView
                                android:id="@+id/profile_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableRight="@drawable/name_icon"
                                android:text="@string/firstName"
                                android:textColor="@color/colorTextDark"
                                android:textSize="12pt"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/username_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="@string/username"
                                android:textSize="5pt"
                                android:textColor="@color/colorTextDark" />

                            <TextView
                                android:id="@+id/username"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@{user.username}"
                                android:textSize="8pt"
                                android:textColor="@color/colorTextDark" />

                            <TextView
                                android:id="@+id/phone_number_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="@string/phoneNumberLabel"
                                android:textSize="5pt"
                                android:textColor="@color/colorTextDark" />

                            <TextView
                                android:id="@+id/phone_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@{user.phone_number}"
                                android:textSize="8pt"
                                android:textColor="@color/colorTextDark" />

                            <TextView
                                android:id="@+id/email_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="@string/emailLabel"
                                android:textSize="5pt"
                                android:textColor="@color/colorTextDark" />

                            <TextView
                                android:id="@+id/email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@{user.email}"
                                android:textSize="8pt"
                                android:textColor="@color/colorTextDark" />

                            <TextView
                                android:id="@+id/gender_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="@string/genderLabel"
                                android:textSize="5pt"
                                android:textColor="@color/colorTextDark" />

                            <TextView
                                android:id="@+id/gender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@{user.gender}"
                                android:textSize="8pt"
                                android:textColor="@color/colorTextDark" />

                            <TextView
                                android:id="@+id/birth_date_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="@string/birthDateLabel"
                                android:textSize="5pt"
                                android:textColor="@color/colorTextDark" />

                            <TextView
                                android:id="@+id/birth_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@{user.birth_date}"
                                android:textSize="8pt"
                                android:textColor="@color/colorTextDark" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="280dp"
                        android:layout_height="150dp"
                        android:layout_margin="12dp"
                        android:layout_gravity="center_horizontal"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="20dp" >

                        <LinearLayout
                            android:id="@+id/motorcycle_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingLeft="25dp"
                            android:paddingRight="25dp"
                            android:layout_below="@+id/profile_layout">

                            <TextView
                                android:id="@+id/motorcycle_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/motorcyclesLabel"
                                android:textSize="8pt"
                                android:textStyle="bold"
                                android:textColor="@color/colorTextDark" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/list_motorcycle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp" />

                            <Button
                                android:id="@+id/input_motor_button"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="150dp"
                                android:layout_height="35dp"
                                android:layout_marginTop="16dp"
                                android:background="@drawable/rounded_button"
                                android:textColor="?attr/colorTextDark"
                                android:text="Input"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <Button
                        android:id="@+id/sign_out_button"
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="25dp"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_button"
                        android:text="Sign Out"
                        android:textColor="?attr/colorTextDark" />
                </LinearLayout>
                </ScrollView>
            </LinearLayout>

        <include
            android:id="@+id/navbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/navbar"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"/>
    </RelativeLayout>
</layout>